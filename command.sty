\newcommand{\newcolbox}[2]{
    \begin{tcolorbox}[
        enhanced,
        frame style image=images/background.png,
        opacityback=0,
        opacitybacktitle=0,
        fonttitle=\bfseries,
        title=#1]
        #2
    \end{tcolorbox}
}
\newcommand{\colbox}[2]{
    \tcbox[
        enhanced,
        frame style image=images/background.png,
        opacityback=0,
        opacitybacktitle=0,
        fonttitle=\bfseries,
        title=#1]{#2}
}

\newcommand{\blankcolbox}[2]{
    \begin{tcolorbox}[
        enhanced,
        attach boxed title to top center={yshift=-3mm,yshifttext=-1mm},
        colframe=blue!75!black,
        colback=white,
        colbacktitle=white,
        coltitle=blue!70!white,
        title=#1,
        fonttitle=\bfseries,
        boxed title style={size=small,colframe=black}]
        #2
    \end{tcolorbox}
}

